{% macro render(node) %}
    {% set content = "" %}
    
    {#field - body#}
    {% import "../../../../field/wide-event-event--body/test/default/macros.twig" as fieldBodyMacros %}
    {% set content = content ~ fieldBodyMacros.render(node.fields.body[0]) %}
    
    {#field - livestream#}
    {% import "../../../../field/wide-event-event--livestream/test/default/macros.twig" as fieldLivestreamMacros %}
    {% set content = content ~ fieldLivestreamMacros.render(node.fields.livestream[0]) %}
    
    {#field - product-section#}
    {% import "../../../../field/wide-event-event--product-section/test/default/macros.twig" as fieldProductSectionMacros %}
    {% set content = content ~ fieldProductSectionMacros.render(node.fields.productSection[0]) %}
    
    {% include "../../src/index.twig" with {
    attributes: node.attributes,
    page: node.page,
    label: node.label
    } %}
{% endmacro %}
