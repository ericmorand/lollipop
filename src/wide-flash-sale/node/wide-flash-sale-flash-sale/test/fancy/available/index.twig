{% import _self as this %}

{% macro renderDescriptionParagraph(field) %}
    {% include "../../../../../paragraph/flash-sale-description/src/index.twig" with field %}
{% endmacro %}

{% set newFixtures = [] %}

{% for fixture in fixtures %}
    {% set field_flash_sale_product_desc = '' %}
    
    {% for field in fixture.content.field_flash_sale_product_desc %}
        {% set field_flash_sale_product_desc = field_flash_sale_product_desc ~ this.renderDescriptionParagraph(field) %}
    {% endfor %}
    
    {% set fixtureContent = fixture.content|merge({field_flash_sale_product_desc: field_flash_sale_product_desc}) %}
    {% set fixture = fixture|merge({content: fixtureContent}) %}
    
    {% set newFixtures = newFixtures|merge([fixture]) %}
{% endfor %}

{% set fixtures = newFixtures %}

{% include "../../default/index.twig" %}
